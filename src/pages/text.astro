---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="HTML Text">
    
    <!-- 标题 -->
    <h2 class="text-3xl font-bold">HTML 元素示例</h2>

    <!-- 插入的HTML内容将放在这里 -->
    <div class="isolated-html-container">
        <!-- 使用iframe实现完全隔离 -->
        <!-- 可以根据需要调整height值，这里改为800px作为示例 -->
        <iframe src="/html/轮播卡片" 
                style="width: 100%; height: 400px; border: none;" 
                title="轮播卡片"></iframe>
    </div>
  
  <!-- 隐藏侧边栏和封面图 -->
  <style is:global>
    /* 重置body样式，确保导航栏紧贴页面顶部 */
    body {
      margin: 0 !important;
      padding: 0 !important;
    }
    
    /* 隐藏侧边栏 */
    .max-w-blog > div > aside {
      display: none !important;
    }
    
    /* 隐藏封面图 */
    #banner {
      display: none !important;
      height: 0 !important;
    }
    
    /* 确保内容容器从导航栏下方开始显示 */
    .max-w-blog > div > main {
      /* 为主要内容添加顶部间距，避免与固定导航栏重叠 */
      margin-top: 8rem !important;
      grid-column: 1 / -1 !important;
    }
    
    /* 修改grid布局，将main区域宽度设置为100% */
    .max-w-blog > div {
      grid-template-columns: 1fr !important;
    }
  </style>
</BaseLayout>