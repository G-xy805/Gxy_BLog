---
import { render } from "astro:content";
import Comment from "@components/comment/index.astro";
import License from "@components/misc/License.astro";
import Markdown from "@components/misc/Markdown.astro";
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { getSortedPosts } from "@utils/content-utils";
import {
	getPostUrlBySlug,
	getCategoryUrl,
	getTagUrl,
	removeFileExtension,
} from "@utils/url-utils";
import { Icon } from "astro-icon/components";
import dayjs from "dayjs";
import utc from "dayjs/plugin/utc";
import PostMetadata from "@/components/content/PostMeta.astro";

import { licenseConfig } from "@/config/licenseConfig";
import { profileConfig } from "@/config/profileConfig";
import { siteConfig } from "@/config/siteConfig";
import { formatDateToYYYYMMDD } from "@/utils/date-utils";
export async function getStaticPaths() {
	const blogEntries = await getSortedPosts();
	return blogEntries.map((entry) => {
		// 将 id 转换为 slug（移除扩展名）以匹配路由参数
		const slug = removeFileExtension(entry.id);
		return {
			params: { slug },
			props: { entry },
		};
	});
}

const { entry } = Astro.props;
const { Content, headings } = await render(entry);

const { remarkPluginFrontmatter } = await render(entry);

// 不使用文章封面图，保留banner功能

// ...existing code...

dayjs.extend(utc);

const jsonLd = {
	"@context": "https://schema.org",
	"@type": "BlogPosting",
	headline: entry.data.title,
	description: entry.data.description || entry.data.title,
	keywords: entry.data.tags,
	author: {
		"@type": "Person",
		name: profileConfig.name,
		url: Astro.site,
	},
	datePublished: formatDateToYYYYMMDD(entry.data.published),
	inLanguage: entry.data.lang
		? entry.data.lang.replace("_", "-")
		: siteConfig.lang.replace("_", "-"),
	// TODO include cover image here
};
---

<MainGridLayout
  banner=""
  title={entry.data.title}
  description={entry.data.description}
  lang={entry.data.lang}
  setOGTypeArticle={true}
  postSlug={entry.id}
  headings={headings}
>
  <script
    is:inline
    slot="head"
    type="application/ld+json"
    set:html={JSON.stringify(jsonLd)}
  />
  <!-- Post content -->
  <div class="card-base z-10 px-0 md:px-0 pt-0 pb-4 relative w-full overflow-hidden onload-animation">
    <!-- Content area with padding -->
    <div class="px-6 md:px-9 pt-8">
      <!-- Title -->
      <div class="relative onload-animation">
        <h1
          data-pagefind-body
          data-pagefind-weight="10"
          data-pagefind-meta="title"
          class="transition w-full block font-bold mb-3
                    text-3xl md:text-[2.25rem]/[2.75rem]
                    text-black/90 dark:text-white/90"
        >
          {entry.data.title}
        </h1>
      </div>

      <!-- metadata -->
      <div class="onload-animation">
        <!-- Tags and category -->
        <PostMetadata
          className="mb-2"
          published={entry.data.published}
          id={entry.id}
          hidePublishDate={true}
          hidePageViews={true}
          showWordCount={false}
        />
        
        <!-- Date, page views, word count and reading time (without icons) -->
        <div class="flex flex-wrap justify-between items-center text-sm text-black/60 dark:text-white/60 mb-5 mt-3 gap-4">
          <!-- Date and page views on left -->
          <div class="flex items-center gap-4">
            <span>{formatDateToYYYYMMDD(entry.data.published)}</span>
            <!-- Page views placeholder (will be populated by PostMetadata) -->
            {entry.id && (
              <span id="post-views" class="text-sm"></span>
            )}
          </div>
          
          <!-- Word count and reading time on right -->
          <div class="flex items-center gap-1">
            <span>{remarkPluginFrontmatter.words} {i18n(I18nKey.wordsCount)}</span>
            <span class="text-xs">·</span>
            <span>{remarkPluginFrontmatter.minutes} {i18n(remarkPluginFrontmatter.minutes === 1 ? I18nKey.minuteCount : I18nKey.minutesCount)}</span>
          </div>
        </div>
      
        <!-- Categories and tags -->
        <div class="flex flex-wrap items-center gap-3 mb-4">
          <!-- Categories -->
          {entry.data.category && entry.data.category.trim() && (
            <a href={getCategoryUrl(entry.data.category)} class="inline-flex items-center gap-1 px-3 py-1.5 rounded-lg text-sm bg-[var(--btn-plain-bg-hover)] text-[var(--primary)] hover:bg-[var(--primary)]/10 transition-colors font-bold">
              <Icon name="feather:folder" class="w-4 h-4" />
              <span>{entry.data.category}</span>
            </a>
          )}
          
          <!-- Tags -->
          {entry.data.tags && entry.data.tags.length > 0 && entry.data.tags.map((tag: string) => (
            <a href={getTagUrl(tag)} class="inline-flex items-center gap-1 px-3 py-1.5 rounded-lg text-sm bg-[#F6F5FA] dark:bg-[#323241] text-[#463AA2] dark:text-[#BD93F9] hover:bg-gray-200 dark:hover:bg-[#44475A] transition-colors font-bold">
              <Icon name="feather:tag" class="w-4 h-4 text-[#463AA2] dark:text-[#BD93F9]" />
              <span>{tag}</span>
            </a>
          ))}
          
          <!-- No category message -->
          {!entry.data.category && (
            <span class="inline-flex items-center gap-1 px-3 py-1.5 rounded-lg text-sm bg-[var(--btn-plain-bg-hover)] text-black/50 dark:text-white/50 font-bold">
              <Icon name="feather:folder" class="w-4 h-4" />
              <span>无分类</span>
            </span>
          )}
          
          <!-- No tags message -->
          {entry.data.tags && entry.data.tags.length === 0 && (
            <span class="inline-flex items-center gap-1 px-3 py-1.5 rounded-lg text-sm bg-[#F6F5FA] dark:bg-[#323241] text-[#463AA2]/50 dark:text-[#BD93F9] opacity-80 font-bold">
              <Icon name="feather:tag" class="w-4 h-4 text-[#463AA2]/50 dark:text-[#BD93F9]" />
              <span>无标签</span>
            </span>
          )}
        </div>
        
        <div class="border-[var(--line-divider)] border-dashed border-b-[1px] mt-3 mb-5" />
      </div>

      <Markdown class="mb-6 markdown-content onload-animation text-justify">
        <Content />
      </Markdown>

      {
        licenseConfig.enable && (
          <License
              title={entry.data.title}
              pubDate={entry.data.published}
              licenseName={entry.data.licenseName}
              licenseUrl={entry.data.licenseUrl}
              category={entry.data.category || undefined}
              tags={entry.data.tags}
              words={remarkPluginFrontmatter.words}
              minutes={remarkPluginFrontmatter.minutes}
              class="mb-6 rounded-xl license-container onload-animation"
            />
        )
      }
    </div>
  </div>



  <div
    class="flex flex-col md:flex-row justify-between mt-8 mb-8 gap-4 overflow-hidden w-full items-stretch"
  >
    <a
      href={entry.data.nextSlug ? getPostUrlBySlug(entry.data.nextSlug) : "#"}
      class:list={[
        "w-full font-bold overflow-hidden active:scale-95 flex items-stretch",
        { "pointer-events-none": !entry.data.nextSlug },
      ]}
    >
      {
        entry.data.nextSlug && (
          <div class="btn-card rounded-2xl w-full max-w-full px-8 py-4 flex items-center justify-center group hover:bg-[#0069FF] dark:hover:bg-[#FF79C6] min-h-[3.75rem]">
            <Icon
              name="feather:chevron-left"
              class="text-[2rem] text-[var(--primary)] group-hover:text-[#CEE4FF] dark:group-hover:text-black absolute left-4"
            />
            <div class="transition max-w-[calc(100%_-_4rem)] text-black/75 dark:text-white/75 group-hover:text-[#CEE4FF] dark:group-hover:text-black text-center whitespace-normal">
              {entry.data.nextTitle}
            </div>
          </div>
        )
      }
    </a>

    <a
      href={entry.data.prevSlug ? getPostUrlBySlug(entry.data.prevSlug) : "#"}
      class:list={[
        "w-full font-bold overflow-hidden active:scale-95 flex items-stretch",
        { "pointer-events-none": !entry.data.prevSlug },
      ]}
    >
      {
        entry.data.prevSlug && (
          <div class="btn-card rounded-2xl w-full max-w-full px-8 py-4 flex items-center justify-center group hover:bg-[#0069FF] dark:hover:bg-[#FF79C6] min-h-[3.75rem]">
            <div class="transition max-w-[calc(100%_-_4rem)] text-black/75 dark:text-white/75 group-hover:text-[#CEE4FF] dark:group-hover:text-black text-center whitespace-normal">
              {entry.data.prevTitle}
            </div>
            <Icon
              name="feather:chevron-right"
              class="text-[2rem] text-[var(--primary)] group-hover:text-[#CEE4FF] dark:group-hover:text-black absolute right-4"
            />
          </div>
        )
      }
    </a>
  </div>

  <!-- 评论 -->
  <Comment post={entry} />
</MainGridLayout>
