---
import BaseLayout from "@layouts/BaseLayout.astro";
import { t } from "@config";
import { Icon } from "astro-icon/components";
import Card from "@/components/temple/Card.astro";

---

<BaseLayout title="404" isIndexed={false}>
  <Card>
    {/* Title area with text overlay */}
    <div class="relative">
      <div class="aspect-video w-full overflow-hidden bg-gradient-to-br from-base-300 to-base-100 rounded-t-2xl">
        <div class="absolute inset-0 w-full h-full">
          <div class="text-9xl md:text-[12rem] font-bold text-primary opacity-20 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
            404
          </div>
        </div>
      </div>

      {/* Title */}
      <div class="absolute bottom-4 left-4 right-4 flex items-end">
        <div class="inline-block bg-black/60 backdrop-blur-md px-4 py-2 rounded-xl border border-white/40 shadow-lg">
          <h1 class="text-xl sm:text-2xl lg:text-4xl font-bold text-white">{t("label.404title") || "Page Not Found"}</h1>
        </div>
      </div>
    </div>

    <div class="p-4 sm:p-6">
    <div class="flex flex-col sm:flex-row gap-4 justify-center my-8">
      <a href="/" class="btn btn-primary gap-2 btn-shine-effect">
        <Icon name="feather:home" class="w-5 h-5" />
        <span>{t("label.404backHome") || "Back to Home"}</span>
      </a>
      <button id="goBackBtn" class="btn btn-outline gap-2" onclick="history.back()">
        <Icon name="feather:corner-up-left" class="w-5 h-5" />
        <span>{t("label.404goBack") || "Go Back"}</span>
      </button>
    </div>

    <div class="divider my-6">
      <Icon name="feather:map" class="w-10 h-10" />
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      <a href="/blog" class="card bg-base-200 p-4 hover-lift text-center transition-all duration-300">
        <div class="text-info mb-2">
          <Icon name="feather:book-open" class="w-8 h-8 mx-auto" />
        </div>
        <h3 class="font-semibold">{t("label.404exploreBlog") || "Explore our blog"}</h3>
      </a>

      <a href="/blog/archives" class="card bg-base-200 p-4 hover-lift text-center transition-all duration-300">
        <div class="text-info mb-2">
          <Icon name="feather:archive" class="w-8 h-8 mx-auto" />
        </div>
        <h3 class="font-semibold">{t("label.404browseArchives") || "Browse archives"}</h3>
      </a>

      <a href="/blog/search" class="card bg-base-200 p-4 hover-lift text-center transition-all duration-300">
        <div class="text-info mb-2">
          <Icon name="feather:search" class="w-8 h-8 mx-auto" />
        </div>
        <h3 class="font-semibold">{t("label.404searchContent") || "Search content"}</h3>
      </a>
    </div>
  </Card>
</BaseLayout>
