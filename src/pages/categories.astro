---
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import MainGridLayout from "@/layouts/MainGridLayout.astro";
import { getCategoriesWithPosts } from "@/utils/content-utils";
import Icon from "@components/misc/Icon.astro";

// 获取所有分类及其文章
const categoriesWithPosts = await getCategoriesWithPosts();

// 对每个分类中的文章按日期排序（最新的排在前面）
categoriesWithPosts.forEach((category) => {
  category.posts.sort(
    (a, b) => new Date(b.data.published).getTime() - new Date(a.data.published).getTime(),
  );
});

// 统计总分类数
const totalCategories = categoriesWithPosts.length;



// 颜色类名数组，与Kael保持一致
function getCategoryColorClass(index: number): string {
  const colorClasses = [
    'bg-blue-100 text-blue-800',
    'bg-pink-100 text-pink-800',
    'bg-purple-100 text-purple-800',
    'bg-indigo-100 text-indigo-800',
    'bg-green-100 text-green-800',
    'bg-yellow-100 text-yellow-800',
    'bg-red-100 text-red-800',
  ];
  return colorClasses[index % colorClasses.length];
}
---

<MainGridLayout title={i18n(I18nKey.categories)}>
  <div class="card-base mb-0">
    <div class="px-6 py-6">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <div class="flex items-center gap-2">
          <Icon icon="feather:folder" class="text-[var(--primary)]" size="2xl" />
          <h1 class="text-3xl font-bold text-[#394E6A] dark:text-[#F8F8F2]">{i18n(I18nKey.categories)}</h1>
          <div class="badge rounded-full bg-[var(--primary)] text-white dark:text-black text-[0.8rem] px-4 py-0.4">{totalCategories} {i18n(totalCategories === 1 ? I18nKey.categoryCount : I18nKey.categoriesCount)}</div>
        </div>
        <a href="/" class="transition-all duration-300 inline-flex items-center justify-center gap-1 px-3 py-1.5 border border-[#394E6A] text-[#394E6A] text-sm font-bold rounded-lg hover:bg-[#394E6A] hover:text-white dark:border-white dark:text-white dark:hover:bg-white dark:hover:text-black">
          <Icon icon="feather:book-open" class="w-4 h-4" />
          <span class="mr-1">{i18n(I18nKey.backToBlog)}</span>
        </a>
      </div>
      <div class="divider my-6"></div>
      <div class="border-t border-[1.5px] border-[#EBEDF0] dark:border-[rgba(255,255,255,0.2)] mt-4 mb-6"></div>
      <div class="text-sm text-[#6B7A8F] dark:text-[#C5C5C3]">探索博客的所有分类</div>
    </div>
  </div>
  <div class="card-base mt-4">
    <div class="card-body p-4 sm:p-6">
      <div class="categories-container">
        {categoriesWithPosts.length > 0 ? (
          <div class="categories-grid">
            {categoriesWithPosts.map((category, index) => (
              <a href={`/categories/${encodeURIComponent(category.name)}/`} class="category-card" data-index={index}>
                <div class={`category-inner ${getCategoryColorClass(index)}`}>
                  <div class="category-header" data-category={category.name}>
                    <div class="category-title">
                      <div class="category-icon">
                        <Icon icon="feather:folder" />
                      </div>
                      <h2>{category.name}</h2>
                      <span class="category-count">{category.count}</span>
                    </div>
                  </div>
                </div>
              </a>
            ))}
          </div>
        ) : (
          <div class="empty-state">
            <Icon icon="feather:frown" class="empty-icon" />
            <p class="empty-text">{i18n(I18nKey.noCategory)}</p>
          </div>
        )}
      </div>
    </div>
  </div>
</MainGridLayout>

<style>
.categories-container {
  padding: 0.25rem;
}

.categories-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  padding: 1rem 0;
}

.category-card {
  text-decoration: none;
  border-radius: 0.5rem;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease-in-out;
  display: inline-flex;
}

.category-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

.category-inner {
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  transition: all 0.3s ease-in-out;
}

.category-header {
  display: flex;
  align-items: center;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
}

.category-header:hover {
  opacity: 0.95;
}

.category-title {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.category-icon {
  width: 1.5rem;
  height: 1.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0.375rem;
  background-color: rgba(255, 255, 255, 0.8);
  color: inherit;
}

.category-title h2 {
  font-size: 1rem;
  font-weight: 700;
  margin: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #394E6A;
}

.dark .category-title h2 {
  color: white;
}

.category-count {
  font-size: 0.75rem;
  font-weight: 700;
  padding: 0.125rem 0.5rem;
  border-radius: 9999px;
  background-color: rgba(255, 255, 255, 0.8);
  color: inherit;
  min-width: 1.5rem;
  text-align: center;
}


.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 4rem 0;
  color: #6b7280;
}

.dark .empty-state {
  color: #9ca3af;
}

.empty-icon {
  width: 4rem;
  height: 4rem;
  margin-bottom: 1rem;
}

.empty-text {
  font-size: 1.125rem;
  font-weight: 500;
}
</style>


