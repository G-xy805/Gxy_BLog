---
import Icon from "@components/misc/Icon.astro";
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import MainGridLayout from "@/layouts/MainGridLayout.astro";
import { getCategoriesWithPosts } from "@/utils/content-utils";

// 获取所有分类及其文章
const categoriesWithPosts = await getCategoriesWithPosts();

// 对每个分类中的文章按日期排序（最新的排在前面）
categoriesWithPosts.forEach((category) => {
	category.posts.sort(
		(a, b) =>
			new Date(b.data.published).getTime() -
			new Date(a.data.published).getTime(),
	);
});

// 统计总分类数
const totalCategories = categoriesWithPosts.length;

// 颜色类名数组，与Kael保持一致
function getCategoryColorClass(index: number): string {
	const colorClasses = [
		"bg-blue-100 text-blue-800",
		"bg-pink-100 text-pink-800",
		"bg-purple-100 text-purple-800",
		"bg-indigo-100 text-indigo-800",
		"bg-green-100 text-green-800",
		"bg-yellow-100 text-yellow-800",
		"bg-red-100 text-red-800",
	];
	return colorClasses[index % colorClasses.length];
}
---

<MainGridLayout title={i18n(I18nKey.categories)}>
  <div class="card-base mb-4 px-4 py-4 md:px-6 md:py-6">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 md:gap-6">
      <!-- 左侧信息 -->
      <div class="flex items-center gap-4 md:gap-6 w-full">
        <!-- 图标容器 -->
        <div class="flex items-center justify-center w-12 h-12 md:w-14 md:h-14 rounded-xl bg-[var(--primary)]/10 text-[var(--primary)] shrink-0">
          <Icon icon="ri:folder-5-fill" class="w-full h-full" />
        </div>
        
        <!-- 文字信息 -->
        <div class="flex flex-col justify-center min-w-0 flex-1">
          <div class="flex items-center gap-2 md:gap-3 flex-wrap">
              <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold text-black/90 dark:text-white/90 leading-tight">{i18n(I18nKey.categories)}</h1>
              <div class="gradient-badge text-xs md:text-sm px-2 py-0.5">
                  {totalCategories} {i18n(totalCategories === 1 ? I18nKey.categoryCount : I18nKey.categoriesCount)}
              </div>
          </div>
          <div class="text-xs text-black/50 dark:text-white/50 mt-1 md:mt-1.5">
              探索博客的所有分类
          </div>
        </div>
      </div>

      <!-- 右侧按钮 -->
      <div class="w-full md:w-auto flex md:block">
        <a href="/" class="w-full md:w-auto hover-button transition-all duration-300 flex items-center justify-center gap-2 px-4 py-2.5 rounded-lg text-white font-bold text-sm md:text-base whitespace-nowrap">
          <Icon icon="ri:book-open-line" class="w-5 h-5 shrink-0" />
          <span class="whitespace-nowrap">{i18n(I18nKey.backToBlog)}</span>
        </a>
      </div>
    </div>
  </div>
  <div class="card-base mt-4">
    <div class="card-body p-4 sm:p-6">
      <div class="categories-container">
        {categoriesWithPosts.length > 0 ? (
          <div class="categories-grid">
            {categoriesWithPosts.map((category, index) => (
              <a href={`/categories/${encodeURIComponent(category.name)}/`} class="category-card" data-index={index}>
                <div class={`category-inner ${getCategoryColorClass(index)}`}>
                  <div class="category-header" data-category={category.name}>
                    <div class="category-title">
                      <div class="category-icon">
                        <Icon icon="ri:folder-line" />
                      </div>
                      <h2>{category.name}</h2>
                      <span class="category-count">{category.count}</span>
                    </div>
                  </div>
                </div>
              </a>
            ))}
          </div>
        ) : (
          <div class="empty-state">
            <Icon icon="ri:empathize-line" class="empty-icon" />
            <p class="empty-text">{i18n(I18nKey.noCategory)}</p>
          </div>
        )}
      </div>
    </div>
  </div>
</MainGridLayout>

<style>
.categories-container {
  padding: 0.25rem;
}

.categories-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  padding: 1rem 0;
}

.category-card {
  text-decoration: none;
  border-radius: 0.5rem;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease-in-out;
  display: inline-flex;
}

.category-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

.category-inner {
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  transition: all 0.3s ease-in-out;
}

.category-header {
  display: flex;
  align-items: center;
  cursor: pointer;
  transition: all 0.3s ease-in-out;
}

.category-header:hover {
  opacity: 0.95;
}

.category-title {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.category-icon {
  width: 1.5rem;
  height: 1.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0.375rem;
  background-color: rgba(255, 255, 255, 0.8);
  color: inherit;
}

.category-title h2 {
  font-size: 1rem;
  font-weight: 700;
  margin: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #394E6A;
}

.dark .category-title h2 {
  color: white;
}

.category-count {
  font-size: 0.75rem;
  font-weight: 700;
  padding: 0.125rem 0.5rem;
  border-radius: 9999px;
  background-color: rgba(255, 255, 255, 0.8);
  color: inherit;
  min-width: 1.5rem;
  text-align: center;
}


.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 4rem 0;
  color: #6b7280;
}

.dark .empty-state {
  color: #9ca3af;
}

.empty-icon {
  width: 4rem;
  height: 4rem;
  margin-bottom: 1rem;
}

.empty-text {
  font-size: 1.125rem;
  font-weight: 500;
}
</style>


