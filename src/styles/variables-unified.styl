/**
 * 统一变量定义 - 合并所有重复的CSS变量和常量
 * Unified Variables - Merged all duplicate CSS variables and constants
 */

/* ===== 基础变量定义 ===== */
:root {
  --radius-large: 1rem;
  --content-delay: 150ms;
  
  /* 字体系统 */
  --font-display: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  --font-code: 'JetBrains Mono', 'Fira Code', monospace;
  
  /* 字号层级 */
  --text-xs: 0.75rem;      /* 12px - 辅助信息 */
  --text-sm: 0.875rem;     /* 14px - 正文 */
  --text-base: 1rem;       /* 16px - 标准 */
  --text-lg: 1.125rem;      /* 18px - 小标题 */
  --text-xl: 1.25rem;       /* 20px - 大标题 */
  --text-2xl: 1.5rem;      /* 24px - 页面标题 */
  --text-3xl: 1.875rem;     /* 28px - 主标题 */
  
  /* 行高 */
  --leading-tight: 1.25;   /* 紧凑 - 标题 */
  --leading-normal: 1.5;    /* 标准 - 正文 */
  --leading-relaxed: 1.75;  /* 宽松 - 长文本 */
  
  /* 字间距 */
  --tracking-tight: -0.025em; /* 紧凑 - 大标题 */
  --tracking-normal: 0;       /* 标准 - 正文 */
}

/* ===== 主题相关变量 ===== */
:root {
  --primary: #5B4FE4; /* 更鲜亮的靛蓝色，提升活力 */
  --primary-rgb: 91, 79, 228;
  --secondary: #7B8FF6; /* 更明亮的青蓝色，作为辅助色 */
  --accent: #A855F7; /* 更鲜艳的紫色，作为强调色 */
  --tertiary: #EC4899; /* 粉色，作为第三强调色，增加色彩丰富度 */
  --page-bg: #F8FAFC; /* 更浅的蓝紫色，提升对比度 */
  --card-bg: rgba(255, 255, 255, 0.92); /* 增加不透明度 */
  --card-bg-transparent: rgba(255, 255, 255, 0.75);
  --card-bg-gradient: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.85) 100%);
  --text-color: #0F172A; /* 更深的文本色，提高对比度 */
  --text-secondary: #475569; /* 加深辅助文本色，提高可读性 */
  --text-muted: #64748B; /* 浅色模式次要文本色，稍微加深 */
  
  --primary-gradient: linear-gradient(135deg, #5B4FE4 0%, #4338CA 100%);
  --secondary-gradient: linear-gradient(135deg, #7B8FF6 0%, #6366F1 100%);
  
  --shadow-primary: 0 4px 12px rgba(91, 79, 228, 0.25);
  --shadow-accent: 0 4px 12px rgba(168, 85, 247, 0.25);
  
  --card-border: rgba(91, 79, 228, 0.1);
  --card-shadow: 0 4px 6px rgba(0, 0, 0, 0.04), 0 12px 24px rgba(0, 0, 0, 0.08), inset 0 1px 2px rgba(255, 255, 255, 0.5); /* 增强阴影效果 */
  --card-hover-shadow: 0 20px 40px rgba(91, 79, 228, 0.2); /* 增强悬停阴影 */
  --card-hover-border: rgba(91, 79, 228, 0.3); /* 增强悬停边框 */
  
  --btn-content: oklch(0.55 0.12 var(--hue));
  --btn-regular-bg: oklch(0.92 0.04 var(--hue)); /* 稍微加深按钮背景，提高辨识度 */
  --btn-regular-bg-hover: oklch(0.88 0.06 var(--hue)); /* 加深悬停效果 */
  --btn-regular-bg-active: oklch(0.85 0.08 var(--hue));
  
  --btn-plain-bg-hover: #F2F7FF;
  --btn-plain-bg-active: oklch(0.98 0.01 var(--hue));
  
  --btn-card-bg-hover: oklch(0.98 0.005 var(--hue));
  --btn-card-bg-active: oklch(0.9 0.03 var(--hue));
  
  --enter-btn-bg: var(--btn-regular-bg);
  --enter-btn-bg-hover: var(--btn-regular-bg-hover);
  --enter-btn-bg-active: var(--btn-regular-bg-active);
  
  --deep-text: oklch(0.25 0.02 var(--hue));
  --title-active: oklch(0.6 0.1 var(--hue));
  
  --line-divider: rgba(0, 0, 0, 0.12); /* 加深分割线，提高可见性 */
  --line-color: rgba(0, 0, 0, 0.15); /* 加深线条颜色，提高可见性 */
  --meta-divider: rgba(0, 0, 0, 0.3); /* 加深元数据分割线 */
  --content-meta: rgba(0, 0, 0, 0.8); /* 加深内容元数据，提高可读性 */
  
  --inline-code-bg: var(--btn-regular-bg);
  --inline-code-color: var(--btn-content);
  --selection-bg: #3367D1;
  --codeblock-selection: oklch(0.40 0.08 var(--hue));
  --codeblock-bg: oklch(0.17 0.015 var(--hue));
  --codeblock-topbar-bg: oklch(0.12 0.015 var(--hue));
  
  --license-block-bg: #F2F7FF;
  
  --link-underline: oklch(0.93 0.04 var(--hue));
  --link-hover: oklch(0.95 0.025 var(--hue));
  --link-active: oklch(0.90 0.05 var(--hue));
  
  --float-panel-bg: white;
  
  --scrollbar-bg-light: rgba(0, 0, 0, 0.4);
  --scrollbar-bg-hover-light: rgba(0, 0, 0, 0.5);
  --scrollbar-bg-active-light: rgba(0, 0, 0, 0.6);
  
  --scrollbar-bg-dark: rgba(255, 255, 255, 0.4);
  --scrollbar-bg-hover-dark: rgba(255, 255, 255, 0.5);
  --scrollbar-bg-active-dark: rgba(255, 255, 255, 0.6);
  
  --scrollbar-bg: var(--scrollbar-bg-light);
  --scrollbar-bg-hover: var(--scrollbar-bg-hover-light);
  --scrollbar-bg-active: var(--scrollbar-bg-active-light);
  
  --display-light-icon: 1;
  --display-dark-icon: 0;
  
  --admonitions-color-tip: #10B981; /* Success - Green */
  --admonitions-bg-tip: rgba(16, 185, 129, 0.1);
  --admonitions-border-tip: rgba(16, 185, 129, 0.3);
  
  --admonitions-color-note: #3B82F6; /* Info - Blue */
  --admonitions-bg-note: rgba(59, 130, 246, 0.1);
  --admonitions-border-note: rgba(59, 130, 246, 0.3);
  
  --admonitions-color-important: #A855F7; /* Important - Purple */
  --admonitions-bg-important: rgba(168, 85, 247, 0.1);
  --admonitions-border-important: rgba(168, 85, 247, 0.3);
  
  --admonitions-color-warning: #F59E0B; /* Warning - Orange */
  --admonitions-bg-warning: rgba(245, 158, 11, 0.1);
  --admonitions-border-warning: rgba(245, 158, 11, 0.3);
  
  --admonitions-color-caution: #EF4444; /* Caution - Red */
  --admonitions-bg-caution: rgba(239, 68, 68, 0.1);
  --admonitions-border-caution: rgba(239, 68, 68, 0.3);
  
  /* 语义化色彩编码 */
  --color-success: #10B981;
  --color-success-light: #34D399;
  --color-success-dark: #059669;
  --color-success-bg: rgba(16, 185, 129, 0.1);
  
  --color-info: #3B82F6;
  --color-info-light: #60A5FA;
  --color-info-dark: #2563EB;
  --color-info-bg: rgba(59, 130, 246, 0.1);
  
  --color-warning: #F59E0B;
  --color-warning-light: #FBBF24;
  --color-warning-dark: #D97706;
  --color-warning-bg: rgba(245, 158, 11, 0.1);
  
  --color-danger: #EF4444;
  --color-danger-light: #F87171;
  --color-danger-dark: #DC2626;
  --color-danger-bg: rgba(239, 68, 68, 0.1);
  
  --color-primary-light: #8B84F3;
  --color-primary-dark: #4338CA;
  
  --color-secondary-light: #A5BBF6;
  --color-secondary-dark: #6366F1;
  
  --color-accent-light: #D8B4FE;
  --color-accent-dark: #9333EA;
  
  --color-tertiary-light: #F9A8D4;
  --color-tertiary-dark: #DB2777;
  
  /* TOC相关变量 */
  --toc-badge-bg: oklch(0.9 0.045 var(--hue));
  --toc-btn-hover: #E3EEFD;
  --toc-btn-active: oklch(0.90 0.015 var(--hue));
  --toc-width: calc((100vw - var(--page-width)) / 2 - 1rem);
  --toc-item-active: oklch(0.70 0.13 var(--hue));
  
  /* 主题色选择条渐变 */
  --color-selection-bar: linear-gradient(to right, 
    oklch(0.80 0.10 0), 
    oklch(0.80 0.10 30), 
    oklch(0.80 0.10 60), 
    oklch(0.80 0.10 90), 
    oklch(0.80 0.10 120), 
    oklch(0.80 0.10 150), 
    oklch(0.80 0.10 180), 
    oklch(0.80 0.10 210), 
    oklch(0.80 0.10 240), 
    oklch(0.80 0.10 270), 
    oklch(0.80 0.10 300), 
    oklch(0.80 0.10 330), 
    oklch(0.80 0.10 360)
  );
}

