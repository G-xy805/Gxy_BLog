---  
import { Image } from "astro:assets";  
import dayjs from "@utils/dayjs";  
import { DATE_FORMAT } from "@config";  
import type { PostData } from "@interfaces/data";  
import Card from "./temple/Card.astro";  
  
const {
  title,
  image,
  pubDate,
  description,
  word = "0",
  time = "0",
  url = decodeURIComponent(Astro.url.toString()),
} = Astro.props as PostData;  
  
const displayDate = pubDate ? dayjs(pubDate).format(DATE_FORMAT) : "";  
---  
  
<Card class="overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300">
  <div class="flex flex-col md:flex-row min-h-24 h-auto">
    <!-- Content Section -->
    <div class="flex-1 p-2 md:p-6 overflow-hidden order-2 md:order-1 flex flex-col">
      <div class="overflow-hidden">
        <h2 class="text-base md:text-xl font-bold text-base-content bg-clip-text bg-gradient-to-r from-primary to-secondary duration-300 hover:text-transparent">
          <a href={url}>{title}</a>
        </h2>
        <p class="text-xs md:text-sm text-base-content/70">{description}</p>
      </div>
      <div class="mt-auto flex justify-between items-center text-xs text-base-content/70">
        <div>
          <span>{displayDate}</span>
        </div>
        <div>
          <span>{word} 字 · {time} 分钟</span>
        </div>
      </div>
    </div>

    <!-- Image Section -->
    {
      image && (
        <a href={url} class="relative w-full md:w-2/5 lg:w-2/5 aspect-video overflow-hidden order-1 md:order-2 group">
          <Image
            src={image}
            alt={title}
            width={800}
            height={400}
            format="webp"
            loading="lazy"
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
          />
        </a>
      )
    }
  </div>
</Card>