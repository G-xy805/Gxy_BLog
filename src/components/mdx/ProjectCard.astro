---
export interface ProjectCardProps {
  name: string;
  avatar: string;
  description: string;
  url: string;
  type: string;
}

const { name, avatar, description, url, type } = Astro.props as ProjectCardProps;

import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
---

<a 
  href={url} 
  target="_blank" 
  rel="noopener noreferrer"
  class="group relative block h-full bg-base-100 rounded-2xl p-4 transition-all duration-300 hover:-translate-y-1 shadow-lg hover:shadow-xl"
>


  <div class="flex flex-col h-full">
    <!-- 头部：图标 + 标题 -->
    <div class="flex items-start gap-3 mb-2">
      <div class="shrink-0">
        <div class="w-14 h-14 rounded-lg bg-base-200/50 p-1 group-hover:bg-primary/10 transition-colors duration-300">
          <div class="w-full h-full rounded-md overflow-hidden">
            {
              avatar ? (
                <Image src={avatar} width={56} height={56} format="webp" alt={name} loading="lazy" class="object-cover w-full h-full" />
              ) : (
                <div class="flex items-center justify-center w-full h-full bg-base-300 text-base-content/50">
                  <Icon name="feather:folder" class="w-7 h-7" />
                </div>
              )
            }
          </div>
        </div>
      </div>
      
      <div class="flex-1 min-w-0 pt-0.5">
        <h3 class="font-bold text-lg text-base-content group-hover:text-primary transition-colors truncate flex items-center gap-2">
          {name}
        </h3>
        <div class="inline-block px-2 py-0.5 text-sm rounded-full font-normal text-black dark:text-white">{type}</div>
      </div>
    </div>

    <!-- 描述 -->
    <p class="text-sm text-base-content/85 line-clamp-2 leading-relaxed mb-2 flex-grow">
      {description}
    </p>


  </div>
</a>
