---
interface Props {
	size?: string;
	dot?: boolean;
	href?: string;
	label?: string;
	class?: string;
}
const { dot, href, label }: Props = Astro.props;
const className = Astro.props.class;
---
<a 
    href={href} 
    aria-label={label} 
    class:list={[
        `h-9 text-sm px-4 
        inline-flex items-center justify-center 
        rounded-lg 
        font-medium
        transition-all duration-300 ease-out
        border border-[var(--primary)]/20
        bg-[var(--primary)]/5 text-[var(--primary)]
        hover:bg-[var(--primary)] hover:text-white hover:border-[var(--primary)]
        focus-visible:bg-[var(--primary)] focus-visible:text-white focus-visible:border-[var(--primary)] focus-visible:outline-none
        dark:hover:bg-[var(--primary)] dark:hover:text-white dark:hover:border-[var(--primary)]
        dark:focus-visible:bg-[var(--primary)] dark:focus-visible:text-white dark:focus-visible:border-[var(--primary)]
        active:scale-95`,
        className
    ]}
>
    {dot && <div class="h-2 w-2 bg-current rounded-full mr-2.5 opacity-80"></div>}
    <slot></slot>
</a>
