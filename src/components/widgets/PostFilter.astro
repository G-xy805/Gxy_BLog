---
import { t } from "@config";
import type { PostData } from "@interfaces/data";
import { Icon } from "astro-icon/components";
const { categories = [], tags = [] } = Astro.props as PostData;
---

<div class="flex flex-wrap items-center gap-2" data-pagefind-ignore>
  {categories.map((category) => (
      <a href={`/blog/category/${category}`} class="btn btn-sm btn-category">
        <Icon name="lucide:folder" class="w-4 h-4" />
        <span class="font-bold">{category}</span>
      </a>
    ))}
  {tags.map((tag) => (
      <a href={`/blog/tag/${tag}`} class="btn btn-sm btn-tag">
        <Icon name="lucide:tag" class="w-4 h-4" />
        <span class="font-bold">{tag}</span>
      </a>
    ))}
  {categories.length === 0 && (
      <span class="btn btn-sm btn-ghost opacity-60 gap-1">
        <Icon name="lucide:folder" class="w-4 h-4" />
        <span class="font-bold">{t("label.noCategory")}</span>
      </span>
    )}
  {tags.length === 0 && (
      <span class="btn btn-sm btn-ghost opacity-60 gap-1">
        <Icon name="lucide:tag" class="w-4 h-4" />
        <span class="font-bold">{t("label.noTag")}</span>
      </span>
    )}
</div>
