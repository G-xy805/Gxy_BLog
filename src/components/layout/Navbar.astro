---
import { Icon } from "astro-icon/components";

import LightDarkSwitch from "@/components/interactive/LightDarkSwitch.svelte";
import { navBarConfig, siteConfig } from "@/config";
import { LinkPresets } from "@/constants/link-presets";
import { LinkPreset, type NavBarLink } from "@/types/config";
import { isHomePage } from "@/utils/layout-utils";
import { url } from "@/utils/url-utils";
import DropdownMenu from "./DropdownMenu.astro";
import NavMenuPanel from "./NavMenuPanel.astro";

const className = Astro.props.class;

// 获取导航栏标题，如果没有设置则使用 siteConfig.title
const navbarTitle = siteConfig.navbarTitle || siteConfig.title;

// 检查是否为首页
const isHomePageCheck = isHomePage(Astro.url.pathname);

let links: NavBarLink[] = navBarConfig.links.map(
	(item: NavBarLink | LinkPreset): NavBarLink => {
		if (typeof item === "number") {
			return LinkPresets[item];
		}
		return item;
	},
);
---
<div id="navbar" class="z-50" data-is-home={isHomePageCheck}>
    <div class="absolute h-8 left-0 right-0 -top-8 bg-[var(--card-bg)] transition"></div> <!-- used for onload animation -->
    <div class:list={[
        className,
        "!overflow-visible w-full h-[4rem] flex items-center justify-between px-4 relative"]} 
        style="backdrop-filter: none; box-shadow: none;">
        
        <!-- 导航栏左侧装饰 -->
        <div class="absolute left-0 top-1/2 -translate-y-1/2 w-32 h-32 bg-gradient-to-r from-[var(--primary)]/10 to-transparent rounded-full blur-2xl pointer-events-none lg:hidden"></div>
        
        <a href={url('/')} class="btn-plain scale-animation rounded-xl h-[2.75rem] px-5 font-bold active:scale-95 relative group z-10">
            <div class="flex flex-row text-[var(--primary)] items-center text-[1.75rem] leading-[1]">
                <span class="navbar-title-text">{navbarTitle}</span>
            </div>
            <div class="absolute -bottom-1 left-0 right-0 h-1 bg-gradient-to-r from-transparent via-[var(--primary)] to-transparent scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-center"></div>
            <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-[var(--primary)]/5 to-[var(--secondary)]/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10"></div>
        </a>
        
        <div class="hidden md:flex items-center space-x-1">
            {links.map((l) => {
                return <DropdownMenu link={l} class="group" />;
            })}
        </div>
        
        <div class="flex items-center gap-2 z-10">
            <!-- 搜索图标按钮 -->
            <a href="/search/" aria-label="Search" class="btn-plain scale-animation rounded-full w-11 h-11 active:scale-95 group relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-[var(--primary)]/10 to-[var(--secondary)]/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <Icon name="ri:search-line" class="text-[1.35rem] text-[var(--primary)] transition-transform duration-300 group-hover:scale-110 group-hover:rotate-12"></Icon>
            </a>

            <LightDarkSwitch client:only="svelte" class="group"></LightDarkSwitch>
            <button aria-label="Menu" aria-expanded="false" aria-controls="nav-menu-panel" name="Nav Menu" class="btn-plain scale-animation rounded-full w-11 h-11 active:scale-95 md:!hidden ml-1 group relative overflow-hidden" id="nav-menu-switch">
                <div class="absolute inset-0 bg-gradient-to-br from-[var(--primary)]/10 to-[var(--secondary)]/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <Icon name="ri:menu-line" class="text-[1.35rem] text-[var(--primary)] transition-all duration-400 group-hover:rotate-90 group-hover:scale-110"></Icon>
            </button>
        </div>
        
        <!-- 导航栏右侧装饰 -->
        <div class="absolute right-0 top-1/2 -translate-y-1/2 w-32 h-32 bg-gradient-to-l from-[var(--secondary)]/10 to-transparent rounded-full blur-2xl pointer-events-none lg:hidden"></div>
    </div>
</div>

<NavMenuPanel links={links}></NavMenuPanel>

<script>
function loadButtonScript() {
    const menuBtn = document.getElementById("nav-menu-switch");
    const menuPanel = document.getElementById("nav-menu-panel");

    if (menuBtn && menuPanel) {
        // 切换菜单状态
        menuBtn.onclick = function (e) {
            e.stopPropagation();
            const isClosed = menuPanel.classList.contains("float-panel-closed");
            
            if (isClosed) {
                openMenu();
            } else {
                closeMenu();
            }
        };

        // 打开菜单
        function openMenu() {
            menuPanel.classList.remove("float-panel-closed");
            menuBtn.setAttribute("aria-expanded", "true");
            menuBtn.classList.add("active"); // 添加激活状态样式
            
            // 延迟添加监听器，防止立即触发
            setTimeout(() => {
                document.addEventListener('click', closeMenuOutside);
                document.addEventListener('keydown', closeMenuEsc);
            }, 0);
        }

        // 关闭菜单
        function closeMenu() {
            menuPanel.classList.add("float-panel-closed");
            menuBtn.setAttribute("aria-expanded", "false");
            menuBtn.classList.remove("active");
            
            document.removeEventListener('click', closeMenuOutside);
            document.removeEventListener('keydown', closeMenuEsc);
        }

        // 点击外部关闭
        function closeMenuOutside(e) {
            if (!menuPanel.contains(e.target) && !menuBtn.contains(e.target)) {
                closeMenu();
            }
        }

        // ESC键关闭
        function closeMenuEsc(e) {
            if (e.key === 'Escape') {
                closeMenu();
            }
        }
    }
}

function initSmartNavbar() {
    const navbar = document.getElementById('navbar');
    if (!navbar) return;

    // 检测是否支持 hover (区分移动端和桌面端)
    const isTouchDevice = window.matchMedia('(hover: none)').matches;
    
    // 初始化 ARIA 状态
    if (!isTouchDevice) {
        navbar.setAttribute('aria-hidden', 'true');
    } else {
        navbar.setAttribute('aria-hidden', 'false');
    }

    if (isTouchDevice) return; // 移动端不启用自动隐藏

    let hideTimeout;
    const TRIGGER_Height = 10; // 顶部触发区域高度
    const HIDE_DELAY = 300; // 延迟隐藏时间

    // 显示导航栏
    function showNavbar() {
        navbar.classList.add('navbar-visible');
        navbar.setAttribute('aria-hidden', 'false');
        if (hideTimeout) {
            clearTimeout(hideTimeout);
            hideTimeout = null;
        }
    }

    // 隐藏导航栏
    function hideNavbar() {
        // 如果菜单打开，不隐藏
        const menuBtn = document.getElementById("nav-menu-switch");
        if (menuBtn && menuBtn.getAttribute("aria-expanded") === "true") return;
        
        navbar.classList.remove('navbar-visible');
        navbar.setAttribute('aria-hidden', 'true');
        hideTimeout = null;
    }

    // 检查鼠标是否在导航栏或下拉菜单区域内
    function isMouseInNavbarArea(mouseX, mouseY) {
        const navbarRect = navbar.getBoundingClientRect();
        
        // 检查是否在导航栏内
        if (mouseX >= navbarRect.left && mouseX <= navbarRect.right &&
            mouseY >= navbarRect.top && mouseY <= navbarRect.bottom) {
            return true;
        }
        
        // 检查是否在任何下拉菜单内
        const dropdownMenus = document.querySelectorAll('.dropdown-menu');
        for (const menu of dropdownMenus) {
            const rect = menu.getBoundingClientRect();
            // 只检查可见的下拉菜单
            if (rect.height > 0 && 
                mouseX >= rect.left && mouseX <= rect.right &&
                mouseY >= rect.top && mouseY <= rect.bottom) {
                return true;
            }
        }
        
        return false;
    }

    // 鼠标移动处理
    window.addEventListener('mousemove', (e) => {
        const mouseY = e.clientY;
        const mouseX = e.clientX;
        
        // 鼠标在顶部触发区域 -> 显示
        if (mouseY <= TRIGGER_Height) {
            showNavbar();
        } 
        // 鼠标在导航栏区域（包括下拉菜单）-> 显示
        else if (isMouseInNavbarArea(mouseX, mouseY)) {
            showNavbar();
        }
        // 鼠标离开导航栏区域 -> 准备隐藏
        else if (!hideTimeout && navbar.classList.contains('navbar-visible')) {
            hideTimeout = setTimeout(hideNavbar, HIDE_DELAY);
        }
    });

    // 鼠标进入导航栏 -> 显示
    navbar.addEventListener('mouseenter', () => {
        showNavbar();
    });

    // 鼠标离开导航栏 -> 准备隐藏（但会检查是否在下拉菜单上）
    navbar.addEventListener('mouseleave', () => {
        if (hideTimeout) {
            clearTimeout(hideTimeout);
        }
        hideTimeout = setTimeout(() => {
            // 再次检查鼠标位置，防止快速移动时的闪烁
            // 这里不需要额外检查，因为 mousemove 事件会处理
            hideNavbar();
        }, HIDE_DELAY);
    });
    
    // 初始化：如果鼠标已经在顶部，显示
    // 无法直接获取鼠标位置，但可以通过mousemove触发
}

loadButtonScript();
initSmartNavbar();

</script>



<style>
.navbar-title-text {
    display: inline-block;
    transform-origin: top;
    vertical-align: middle;
    transition: all 0.3s ease-in-out;
}

#navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    -webkit-backdrop-filter: blur(12px);
    backdrop-filter: blur(12px);
    background: rgba(255, 255, 255, 0.95);
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), background-color 0.3s ease;
    overflow: visible;
    transform: translateY(-100%);
}

#navbar.navbar-visible {
    transform: translateY(0);
}

@media (hover: none), (max-width: 768px) {
    #navbar {
        position: sticky;
        top: 0;
        transform: none;
    }
}

#navbar::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--primary), var(--secondary), var(--accent), transparent);
    opacity: 0.5;
}

:root.dark #navbar {
    background: rgba(30, 41, 59, 0.85);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
}

#navbar.scrolled {
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
}

:root.dark #navbar.scrolled {
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
}

#navbar:hover {
    box-shadow: 0 8px 25px rgba(67, 56, 202, 0.15);
}

.btn-plain {
    transition: all 0.3s ease-in-out;
    position: relative;
    overflow: hidden;
}

.btn-plain::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(79, 70, 229, 0.1), transparent);
    transition: left 0.5s;
}

.btn-plain:hover::before {
    left: 100%;
}

.btn-plain:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(79, 70, 229, 0.2);
}

.navbar-title-text:hover {
    transform: scale(1.05);
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

#nav-menu-switch {
    transition: all 0.3s ease-in-out;
}

#nav-menu-switch:hover {
    transform: rotate(90deg) scale(1.1);
    box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
}

@media (max-width: 767px) {
    #navbar {
        padding-left: 1rem;
        padding-right: 1rem;
    }
    
    #navbar .navbar-title-text {
        font-size: 1.5rem;
    }
}
</style>
