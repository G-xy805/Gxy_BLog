---
import { Icon } from "astro-icon/components";
import { LinkPresets } from "@/constants/link-presets";
import { LinkPreset, type NavBarLink } from "@/types/config";
import { url } from "@/utils/url-utils";

interface Props {
	links: NavBarLink[];
}

// 处理links中的LinkPreset转换
const processedLinks = Astro.props.links.map((link: NavBarLink) => ({
	...link,
	children: link.children?.map((child: NavBarLink | LinkPreset): NavBarLink => {
		if (typeof child === "number") {
			return LinkPresets[child];
		}
		return child;
	}),
}));
---
<div id="nav-menu-panel" class="float-panel float-panel-closed transition-all duration-300 fixed top-[4.5rem] right-4 left-4 max-h-[80vh] overflow-y-auto z-[9999] rounded-2xl shadow-2xl border border-white/10 dark:border-white/5 backdrop-blur-xl">
    <div class="bg-gradient-to-br from-white/95 via-white/90 to-gray-50/95 dark:from-gray-900/95 dark:via-gray-800/90 dark:to-gray-900/95 p-4 rounded-2xl">
        {processedLinks.map((link, index) => (
            <div class:list={["mobile-menu-item", index !== processedLinks.length - 1 ? "mb-2" : ""]}>
            {link.children && link.children.length > 0 ? (
                <div class="mobile-dropdown group" data-mobile-dropdown>
                    <button 
                        class="relative flex justify-between items-center py-3 px-4 rounded-xl w-full text-left overflow-hidden
                            hover:from-[var(--primary)]/5 hover:via-[var(--primary)]/3 hover:to-transparent
                            active:scale-[0.98] transition-all duration-300 ease-out"
                        data-mobile-dropdown-trigger
                        aria-expanded="false"
                    >
                        <div class="absolute inset-0 bg-gradient-to-r from-[var(--primary)]/0 to-[var(--secondary)]/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-xl"></div>
                        
                        <div class="relative flex items-center gap-3">
                            <div class="flex items-center justify-center w-10 h-10 rounded-xl bg-gradient-to-br from-[var(--primary)]/10 to-[var(--secondary)]/5 
                                group-hover:from-[var(--primary)]/20 group-hover:to-[var(--secondary)]/10 transition-all duration-300 shadow-sm">
                                {link.icon && (
                                    <svg class="w-5 h-5 text-[var(--primary)] group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                                        {link.icon === 'ri:home-2-line' && <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />}
                                        {link.icon === 'ri:grid-line' && <path stroke-linecap="round" stroke-linejoin="round" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />}
                                        {link.icon === 'ri:calendar-line' && <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />}
                                        {link.icon === 'ri:information-line' && <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />}
                                    </svg>
                                )}
                            </div>
                            
                            <span class="text-[0.95rem] font-semibold text-gray-700 dark:text-gray-200 group-hover:text-[var(--primary)] transition-colors duration-300">
                                {link.name}
                            </span>
                        </div>
                        
                        <div class="relative flex items-center justify-center w-8 h-8 rounded-full bg-[var(--primary)]/5 group-hover:bg-[var(--primary)]/10 transition-all duration-300">
                            <svg class="mobile-dropdown-arrow w-4 h-4 text-[var(--primary)] transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                            </svg>
                        </div>
                    </button>
                    <div class="mobile-submenu pl-2 mt-1 space-y-1" data-mobile-submenu>
                        {link.children.map((child, childIndex) => (
                            <a href={child.external ? child.url : url(child.url)} 
                               class:list={["group/sub flex items-center gap-3 py-2.5 px-3 rounded-xl transition-all duration-300", "hover:bg-[var(--primary)]/5 active:scale-[0.98]", childIndex === 0 ? "mt-1" : ""]}
                               target={child.external ? "_blank" : null}
                               rel={child.external ? "noopener noreferrer" : ""}>
                                <div class="w-1 h-1 rounded-full bg-[var(--primary)]/30 group-hover/sub:bg-[var(--primary)] group-hover/sub:scale-150 transition-all duration-300"></div>
                                
                                {child.icon && (
                                    <svg class="w-4 h-4 text-gray-400 group-hover/sub:text-[var(--primary)] transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                                        {child.icon === 'ri:home-2-line' && <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />}
                                        {child.icon === 'ri:grid-line' && <path stroke-linecap="round" stroke-linejoin="round" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />}
                                        {child.icon === 'ri:calendar-line' && <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />}
                                        {child.icon === 'ri:information-line' && <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />}
                                        {child.icon === 'ri:user-line' && <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />}
                                        {child.icon === 'ri:code-box-line' && <path stroke-linecap="round" stroke-linejoin="round" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />}
                                    </svg>
                                )}
                                
                                <span class="text-[0.9rem] text-gray-600 dark:text-gray-400 font-medium group-hover/sub:text-[var(--primary)] transition-colors duration-300">
                                    {child.name}
                                </span>
                                
                                {child.external && (
                                    <svg class="w-3 h-3 text-gray-400 group-hover/sub:text-[var(--primary)] ml-auto transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                                    </svg>
                                )}
                            </a>
                        ))}
                    </div>
                </div>
            ) : (
                <!-- 普通链接项目 -->
                <a href={link.external ? link.url : url(link.url)} 
                   class="group flex justify-between items-center py-2.5 pl-3 pr-2 rounded-lg gap-8
                    hover:bg-[var(--btn-plain-bg-hover)] active:bg-[var(--btn-plain-bg-active)] transition-all duration-300"
                   target={link.external ? "_blank" : null}
                   rel={link.external ? "noopener noreferrer" : ""}
                >
                    <div class="relative flex items-center gap-3 w-full">
                        <div class="flex items-center justify-center w-10 h-10 rounded-xl bg-gradient-to-br from-[var(--primary)]/10 to-[var(--secondary)]/5 
                            group-hover:from-[var(--primary)]/20 group-hover:to-[var(--secondary)]/10 transition-all duration-300 shadow-sm">
                            {link.icon && (
                                <svg class="w-5 h-5 text-[var(--primary)] group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                                    {link.icon === 'ri:home-2-line' && <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />}
                                    {link.icon === 'ri:grid-line' && <path stroke-linecap="round" stroke-linejoin="round" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />}
                                    {link.icon === 'ri:calendar-line' && <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />}
                                    {link.icon === 'ri:information-line' && <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />}
                                </svg>
                            )}
                        </div>
                        
                        <span class="flex-1 text-[0.95rem] font-semibold text-gray-700 dark:text-gray-200 group-hover:text-[var(--primary)] transition-colors duration-300">
                            {link.name}
                        </span>
                    </div>
                    
                    {link.external ? (
                        <svg class="w-4 h-4 text-[var(--primary)]/70 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                        </svg>
                    ) : (
                        <div class="flex items-center justify-center w-6 h-6">
                            <div class="w-1.5 h-1.5 rounded-full bg-[var(--primary)]/30 group-hover:bg-[var(--primary)]/60 transition-all duration-300"></div>
                        </div>
                    )}
                </a>
            )}
        </div>
    ))}
</div>

<style>
    .mobile-submenu {
        max-height: 0;
        overflow: hidden;
        transition: all 0.3s ease-in-out;
    }
    
    .mobile-dropdown[data-expanded="true"] .mobile-submenu {
        max-height: 30rem;
    }
    
    .mobile-dropdown[data-expanded="true"] .mobile-dropdown-arrow {
        transform: rotate(180deg);
    }
    
    /* 响应式设计 */
    @media (max-width: 767px) {
        #nav-menu-panel {
            top: 3.75rem;
            right: 1rem;
            left: 1rem;
        }
    }
    
    @media (max-width: 480px) {
        #nav-menu-panel {
            top: 3.5rem;
            padding: 1rem;
        }
        
        .mobile-menu-item {
            margin-bottom: 0.5rem;
        }
        
        .mobile-menu-item button,
        .mobile-menu-item a {
            padding: 0.75rem 1rem;
        }
        
        .mobile-menu-item .mobile-submenu a {
            padding: 0.5rem 1rem 0.5rem 2rem;
        }
    }
</style>

<script type="module">
    function initMobileDropdowns() {
        const mobileDropdowns = document.querySelectorAll('[data-mobile-dropdown]');
        
        mobileDropdowns.forEach(dropdown => {
            const trigger = dropdown.querySelector('[data-mobile-dropdown-trigger]');
            const submenu = dropdown.querySelector('[data-mobile-submenu]');
            
            if (!trigger || !submenu) return;
            
            // 移除之前的事件监听器（防止重复绑定）
            const newTrigger = trigger.cloneNode(true);
            trigger.parentNode?.replaceChild(newTrigger, trigger);
            
            newTrigger.addEventListener('click', function(e) {
                e.preventDefault();
                const isExpanded = dropdown.getAttribute('data-expanded') === 'true';
                
                // 关闭其他打开的下拉菜单
                mobileDropdowns.forEach(otherDropdown => {
                    if (otherDropdown !== dropdown) {
                        otherDropdown.setAttribute('data-expanded', 'false');
                        const otherTrigger = otherDropdown.querySelector('[data-mobile-dropdown-trigger]');
                        if (otherTrigger) {
                            otherTrigger.setAttribute('aria-expanded', 'false');
                        }
                    }
                });
                
                // 切换当前下拉菜单
                const newState = !isExpanded;
                dropdown.setAttribute('data-expanded', newState.toString());
                if (newTrigger instanceof HTMLElement) {
                    newTrigger.setAttribute('aria-expanded', newState.toString());
                }
            });
        });
    }
    
    // 将初始化函数暴露给全局作用域，以便Swup可以调用
    if (typeof window !== 'undefined') {
        window.initMobileDropdowns = initMobileDropdowns;
    }

    document.addEventListener('DOMContentLoaded', initMobileDropdowns);
</script>
