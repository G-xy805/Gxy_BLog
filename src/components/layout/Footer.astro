---
import { Icon } from "astro-icon/components";

const currentYear = new Date().getFullYear();

// Kael项目的配置值
const USER_NAME = "Gxy";
const USER_SITE = "https://zayck.pages.dev";
const USER_FOOTER_SOCIAL_ICONS = [
	{
		href: "/sponsor/",
		ariaLabel: "支持博主",
		title: "支持博主",
		svg: "feather:coffee",
	},
	{
		href: "https://github.com/zayck",
		ariaLabel: "Github",
		title: "Github",
		svg: "ri:github-line",
	},
	{
		href: "https://space.bilibili.com/341981702",
		ariaLabel: "BiliBili",
		title: "BiliBili",
		svg: "ri:bilibili-line",
	},
	{
		href: "https://mp.weixin.qq.com/mp/homepage?__biz=MzU2MTI5MzE4OA==&hid=1&sn=356f3016aeac48fc034804fca1307349&scene=18#wechat_redirect",
		ariaLabel: "wechat",
		title: "wechat",
		svg: "ri:wechat-2-line",
	},
];
---

<!--<div class="border-t border-[var(&#45;&#45;primary)] mx-16 border-dashed py-8 max-w-[var(&#45;&#45;page-width)] flex flex-col items-center justify-center px-6">-->
<!--<div class="transition bg-[oklch(92%_0.01_var(&#45;&#45;hue))] dark:bg-black rounded-2xl py-8 mt-4 mb-8 flex flex-col items-center justify-center px-6">-->
<div class="card-base my-4 scroll-animation">
  <!-- 页脚装饰元素 -->
  <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-[var(--primary)] to-transparent"></div>
  
  <footer class="py-3 pl-4 pr-4 md:pl-8 md:pr-16 md:py-10 flex flex-col md:flex-row justify-between items-start gap-8 md:gap-12 max-w-5xl mx-auto relative">
    <aside class="flex flex-col gap-4">
      <!-- Logo -->
      <div class="flex items-center gap-3">
        <svg
          width="32"
          height="32"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
          fill-rule="evenodd"
          clip-rule="evenodd"
          class="fill-current md:w-[40px] md:h-[40px] text-[var(--primary)] transition-transform hover:scale-110"
          aria-label="Logo"
          role="img"
        >
          <path
            d="M22.672 15.226l-2.432.811.841 2.515c.33 1.019-.209 2.127-1.23 2.456-1.15.325-2.148-.321-2.463-1.226l-.84-2.518-5.013 1.677.84 2.517c.391 1.203-.434 2.542-1.831 2.542-.88 0-1.601-.564-1.86-1.314l-.842-2.516-2.431.809c-1.135.328-2.145-.317-2.463-1.229-.329-1.018.211-2.127 1.231-2.456l2.432-.809-1.621-4.823-2.432.808c-1.355.384-2.558-.59-2.558-1.839 0-.817.509-1.582 1.327-1.846l2.433-.809-.842-2.515c-.33-1.02.211-2.129 1.232-2.458 1.02-.329 2.13.209 2.461 1.229l.842 2.515 5.011-1.677-.839-2.517c-.403-1.238.484-2.553 1.843-2.553.819 0 1.585.509 1.85 1.326l.841 2.517 2.431-.81c1.02-.33 2.131.211 2.461 1.229.332 1.018-.21 2.126-1.23 2.456l-2.433.809 1.622 4.823 2.433-.809c1.242-.401 2.557.484 2.557 1.838 0 .819-.51 1.583-1.328 1.847m-8.992-6.428l-5.01 1.675 1.619 4.828 5.011-1.674-1.62-4.829z"
          ></path>
        </svg>
        <span class="text-xl font-bold text-[var(--primary)]">Gxy' Blog</span>
      </div>
      
      <!-- 版权信息 -->
      <p class="text-xs md:text-sm text-[var(--text-secondary)] font-normal leading-loose">
        Powered by <a href="https://github.com/zayck/Kael" target="_blank" class="font-bold text-[var(--primary)] hover:underline transition-all hover:scale-105">Kael</a>
        <br />
        Copyright © <a href={USER_SITE} target="_blank" class="font-bold text-[var(--primary)] hover:underline transition-all hover:scale-105">{USER_NAME}</a>
        {currentYear} - All right reserved
      </p>
    </aside>
    
    <!-- 导航链接 -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- 快速链接 -->
      <nav class="flex flex-col items-start gap-4">
        <span class="footer-title text-sm md:text-sm text-[var(--primary)] font-semibold uppercase tracking-wider">快速链接</span>
        <ul class="flex flex-col gap-3">
          {[
            { name: "首页", href: "/" },
            { name: "文章", href: "/posts" },
            { name: "分类", href: "/categories" },
            { name: "标签", href: "/tags" },
            { name: "关于", href: "/about" }
          ].map(item => (
            <li>
              <a href={item.href} class="text-sm text-[var(--text-secondary)] hover:text-[var(--primary)] transition-all hover:translate-x-2 hover:font-medium">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>
      
      <!-- 社交链接 -->
      <nav class="flex flex-col items-start gap-4">
        <span class="footer-title text-sm md:text-sm text-[var(--primary)] font-semibold uppercase tracking-wider">社交网络</span>
        <div class="grid grid-flow-col gap-4">
          {USER_FOOTER_SOCIAL_ICONS.map((icon, index) => (
            <div class="tooltip" data-tip={icon.title}>
              <a 
                href={icon.href} 
                aria-label={icon.ariaLabel} 
                target={index > 0 ? "_blank" : undefined}
                class="transition-all hover:scale-125 hover:text-[var(--primary)]"
              >
                <Icon name={icon.svg} class="text-2xl md:text-xl text-[var(--text-secondary)]" />
              </a>
            </div>
          ))}
          <div class="tooltip" data-tip="RSS Feed">
            <a 
              href="/rss.xml" 
              aria-label="RSS Feed" 
              target="_blank"
              class="transition-all hover:scale-125 hover:text-[var(--primary)]"
            >
              <Icon name="feather:rss" class="text-2xl md:text-xl text-[var(--text-secondary)]" />
            </a>
          </div>
        </div>
      </nav>
    </div>
    
    <!-- 额外信息 -->
    <div class="w-full md:w-auto flex flex-col gap-3 text-center md:text-left">
      <!-- 订阅区域 -->
      <div class="bg-[var(--primary)] bg-opacity-5 p-3 rounded-lg border border-[var(--primary)] border-opacity-20">
        <p class="text-sm text-[var(--primary)] font-medium">订阅更新</p>
        <p class="text-xs text-[var(--text-secondary)] mt-1">获取最新的技术分享和文章推送</p>
      </div>
      
      <!-- 页脚底部 -->
      <div class="text-xs text-[var(--text-muted)] mt-4">
        <p>系统 · 高效 · 实用的技术分享</p>
      </div>
    </div>
  </footer>
</div>

<style>
/* 页脚样式优化 */
footer a {
  transition: all 0.3s ease-in-out;
}

footer a:hover {
  transform: translateY(-2px);
}

/* 社交图标悬停效果 */
footer .tooltip {
  position: relative;
  display: inline-block;
}

/* 页脚装饰 */
.card-base::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(90deg, transparent, var(--primary), transparent);
  transform: scaleX(0);
  transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

.card-base:hover::before {
  transform: scaleX(1);
}
</style>
